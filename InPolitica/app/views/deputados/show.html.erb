
<div class="deputado-page">
  <div class="column-left">
    <div class="small-profile">
      <img src="<%= @deputado.url_foto %>">
      <em><%= @deputado.nome %></em>
      <i><%= @deputado.partido.nome if @deputado.partido%></i>
    </div>
  </div>
  <div class="column-right">
    <h3>Gastos</h3>
    <table class="expenses">
      <thead>
        <th>Data</th>
        <th>Tipo de gasto</th>
        <th>Valor l√≠quido</th>
      </thead>
      <tbody>
        <% @deputado.gastos.each do |gasto|%>
        <tr>
          <td><%= gasto.data %></td>
          <td><%= gasto.informacao %></td>
          <td><%= gasto.valorliquido %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p id="notice"><%= notice %></p>



