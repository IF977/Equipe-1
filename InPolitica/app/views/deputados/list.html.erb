<div class="deputados-page general-page">
    <div class="filter-bar">
        <span>Filtros:</span>
        <a href="#">Partidos</a>
        <input type="text" name="search" placeholder="Buscar...">
    </div>
    
    <ul class="deputados-list">
        <% @deputados.each do |deputado| %>
        <li>
            <div class="picture" style="background-image: url('<%= deputado['urlFoto'] %>');"></div>
            <span class="name"><%= deputado['nome'][0..19] %></span>
            <span class="party"><%= deputado['siglaPartido'] %></span>
        </li>
        <% end %>
    </ul>
</div>